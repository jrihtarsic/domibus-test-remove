
[mysqladmin]
user=root

[mysqld]
basedir=/opt/bitnami/mariadb
datadir="/data/bitnami/mariadb/data"
port=3306
socket=/opt/bitnami/mariadb/tmp/mysql.sock
tmpdir=/opt/bitnami/mariadb/tmp
max_allowed_packet=32M
#bind-address=127.0.0.1
skip-name-resolve=1
expire_logs_days=7

character-set-server=UTF8
collation-server=utf8_general_ci
[client]
port=3306
socket=/opt/bitnami/mariadb/tmp/mysql.sock

default-character-set=UTF8
[manager]
port=3306
socket=/opt/bitnami/mariadb/tmp/mysql.sock
pid-file=/opt/bitnami/mariadb/tmp/manager.pid
default-mysqld-path=/opt/bitnami/mariadb/bin/mysqld.bin


!include /opt/bitnami/mariadb/bitnami/my.cnf
