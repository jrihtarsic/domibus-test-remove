

<!-- Security Policy cache configuration -->
<ehcache>
    <cache name="policyCache"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false" >
    </cache>
    <cache name="backendFilterCache"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="tlsCache"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
        <sizeOfPolicy maxDepth="100" maxDepthExceededBehavior="abort"/>
    </cache>
    <cache name="certValidationByAlias"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="crlByCert"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="lookupInfo"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="dispatchClient"
           maxBytesLocalHeap="10m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="auditTarget"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="userDomain"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="preferredUserDomain"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="allDomains"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="domainByCode"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="domainByScheduler"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="dss-cache"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="600"
           overflowToDisk="false">
    </cache>
    <cache name="encryptionKey"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="passwordEncryptionKey"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="multitenantCache"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="3600"
           overflowToDisk="false">
    </cache>
    <cache name="jmsDestinations"
           maxBytesLocalHeap="5m"
           timeToLiveSeconds="600"
           overflowToDisk="false">
    </cache>

</ehcache>