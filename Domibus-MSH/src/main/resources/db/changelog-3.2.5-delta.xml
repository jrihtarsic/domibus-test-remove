<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">
    <changeSet author="idragusa" id="changelog-nonrepudiation">
        <createTable tableName="TB_SECURITYHEADER">
            <column autoIncrement="true" name="ID_PK" type="INT">
                <constraints primaryKey="true"/>
            </column>
        </createTable>
        <createTable tableName="TB_SECURITYHEADER_DATA">
            <column name="SECURITYHEADER_ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="RAW_XML" type="CLOB"/>
        </createTable>

        <addColumn tableName="TB_USER_MESSAGE">
            <column name="SECURITYHEADER_ID_PK" type="INT"/>
        </addColumn>

        <addColumn tableName="TB_SIGNAL_MESSAGE">
            <column name="SECURITYHEADER_ID_PK" type="INT"/>
        </addColumn>

        <addForeignKeyConstraint baseColumnNames="SECURITYHEADER_ID" baseTableName="TB_SECURITYHEADER_DATA"
                                 constraintName="FK_11ccae214mvs1kh5sgcj3y5oy" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="ID_PK" referencedTableName="TB_SECURITYHEADER"/>

        <addForeignKeyConstraint baseColumnNames="SECURITYHEADER_ID_PK" baseTableName="TB_SIGNAL_MESSAGE"
                                 constraintName="FK_11ss2y6g9buet3o3k1n4qxwec" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="ID_PK" referencedTableName="TB_SECURITYHEADER"/>

        <addForeignKeyConstraint baseColumnNames="SECURITYHEADER_ID_PK" baseTableName="TB_USER_MESSAGE"
                                 constraintName="FK_22uu2y6g9buet3o3k1n4qxwec" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="ID_PK" referencedTableName="TB_USER_MESSAGE"/>

        <createIndex indexName="FK_11ccae214mvs1kh5sgcj3y5oy" tableName="TB_SECURITYHEADER_DATA">
            <column name="SECURITYHEADER_ID"/>
        </createIndex>

        <createIndex indexName="FK_11ss2y6g9buet3o3k1n4qxwec" tableName="TB_SIGNAL_MESSAGE">
            <column name="SECURITYHEADER_ID_PK"/>
        </createIndex>

        <createIndex indexName="FK_22uu2y6g9buet3o3k1n4qxwec" tableName="TB_USER_MESSAGE">
            <column name="SECURITYHEADER_ID_PK"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>