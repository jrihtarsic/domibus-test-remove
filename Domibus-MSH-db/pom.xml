                        </goals>
                        <configuration>
                            <changeLogFile>
                                src/main/resources/db/changelog-3.3.4.xml
                            </changeLogFile>
                            <url>
                                offline:mysql?changeLogFile=${project.build.directory}/liquibase/changelog-3.3.4.mysql
                            </url>
                            <migrationSqlOutputFile>
                                ${project.build.directory}/sql-scripts/mysql5innoDb-3.3.4.ddl
